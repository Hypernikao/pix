<label for="{{textfieldName}}" class="signup-textfield__label">{{label}}</label>

<div class="signup-textfield__message {{validationMessageClass}}">{{validationMessage}}</div>

{{input type='text'
        id=textfieldName
        value=_textfield
        focus-out=(action 'validate')
        class= 'signup-textfield__input'
        classBinding="inputValidationStatus"
}}