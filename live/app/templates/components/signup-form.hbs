<form class="signup-form-container">
  <div class="signup-form__logo">
    {{pix-logo}}
  </div>

  <div class="signup-form__heading-container">
    <h1 class="signup-form__heading">Inscription gratuite</h1>
  </div>

  <div class="signup-form__input-container">
    {{signup-textfield
      validate="validateInput" label="Nom"
      validationStatus=lastname.status
      textfieldName="lastname" validationMessage=lastname.message}}
  </div>

  <div class="signup-form__input-container">
    {{signup-textfield
      validate="validateInput" label="Prénom"
      validationStatus=firstname.status
      textfieldName="firstname" validationMessage=firstname.message}}
  </div>

  <div class="signup-form__input-container">
    {{signup-textfield
      validate="validateInputEmail" label="Adresse Email"
      validationStatus=email.status
      textfieldName="email" validationMessage=email.message}}
  </div>

  <div class="signup-form__input-container">
    {{signup-textfield
      validate="validateInput" label="Mot de passe"
      validationStatus=password.status
      textfieldName="password" validationMessage=password.message}}
  </div>

  <div class="signup-form__cgu-container">

    <label for="cgu" class="signup-form__cgu-label">
      {{input type="checkbox" id='cgu' name=cgu_checkbox class="signup-form__cgu-checkbox"}}
      <span>J'​accepte les {{#link-to 'inscription' class="signup__cgu-link"}}conditions d'​utilisation de Pix{{/link-to}}</span>
    </label>

  </div>

  <div class="signup-form__submit-container">
    <button class="signup__submit-button" {{action "signup"}}>Je m'inscris</button>
  </div>

</form>